<h1>Listing foods</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>User Email</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.item %></td>
        <td><%= food.user.email if food.user %></td>
        <td><%= food.description %></td>
        <td><%= link_to 'Show', food %></td>
        <% if user_signed_in? %>
        <% if food.user == current_user %>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Food', new_food_path %>
<% end %>